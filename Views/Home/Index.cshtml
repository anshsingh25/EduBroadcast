@{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-12 mb-5 reveal">
        <div class="hero">
            <h1 class="mb-3">
                <i class="bi bi-broadcast-pin me-3" style="font-size: 2.5rem; vertical-align: middle;"></i>
                EduBroadcast
            </h1>
            <p class="mb-4 lead">Streamline your classroom communication with powerful, easy-to-use tools designed for modern educators.</p>
            <div class="d-flex gap-3 flex-wrap">
                <a href="/Messages/Broadcast" class="btn btn-primary btn-lg">
                    <i class="bi bi-send me-2"></i>Start Broadcasting
                </a>
                <a href="/Scheduler" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-calendar-check me-2"></i>Schedule Conferences
                </a>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")

<div class="row g-4 mb-5">
    <div class="col-12 mb-3">
        <h2 class="text-center mb-4 reveal" style="font-weight: 700;">
            <span style="background: linear-gradient(135deg, #6366f1, #06b6d4); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
                Powerful Features
            </span>
        </h2>
    </div>

    <div class="col-md-4 reveal" style="transition-delay:.1s">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <div class="mb-4" style="font-size: 3rem; color: #6366f1;">
                    <i class="bi bi-megaphone-fill"></i>
                </div>
                <h4 class="card-title mb-3">Quick Message Broadcasting</h4>
                <p class="card-text sc-muted flex-grow-1">
                    Create reusable message templates and broadcast important announcements to entire classes or individual students via SMS and Email.
                </p>
                <div class="d-flex gap-2 mt-3">
                    <a class="btn btn-primary w-100" href="/Messages/Templates">
                        <i class="bi bi-list-task me-2"></i>Templates
                    </a>
                    <a class="btn btn-outline-light w-100" href="/Messages/Broadcast">
                        <i class="bi bi-send me-2"></i>Broadcast
                    </a>
                </div>
                <div class="mt-3 pt-3" style="border-top: 1px solid rgba(255,255,255,.08);">
                    <small class="sc-muted">
                        <i class="bi bi-check-circle me-1"></i>Template Management
                        <br>
                        <i class="bi bi-check-circle me-1"></i>Class & Individual Targeting
                        <br>
                        <i class="bi bi-check-circle me-1"></i>SMS & Email Support
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 reveal" style="transition-delay:.2s">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <div class="mb-4" style="font-size: 3rem; color: #06b6d4;">
                    <i class="bi bi-journal-text"></i>
                </div>
                <h4 class="card-title mb-3">While You Were Out</h4>
                <p class="card-text sc-muted flex-grow-1">
                    Keep absent students in the loop by logging daily class activities. Share what was covered, handouts, and homework through public class pages.
                </p>
                <div class="d-flex gap-2 mt-3">
                    <a class="btn btn-primary w-100" href="/Absence">
                        <i class="bi bi-plus-circle me-2"></i>Add Entry
                    </a>
                </div>
                <div class="mt-3 pt-3" style="border-top: 1px solid rgba(255,255,255,.08);">
                    <small class="sc-muted">
                        <i class="bi bi-check-circle me-1"></i>Daily Activity Logs
                        <br>
                        <i class="bi bi-check-circle me-1"></i>Public Class Pages
                        <br>
                        <i class="bi bi-check-circle me-1"></i>Assignment Tracking
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 reveal" style="transition-delay:.3s">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <div class="mb-4" style="font-size: 3rem; color: #10b981;">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <h4 class="card-title mb-3">Conference Scheduler</h4>
                <p class="card-text sc-muted flex-grow-1">
                    Simplify parent-teacher conferences with an easy-to-use booking system. Create time slots, accept bookings, and prevent scheduling conflicts.
                </p>
                <div class="d-flex gap-2 mt-3">
                    <a class="btn btn-primary w-100" href="/Scheduler">
                        <i class="bi bi-calendar-event me-2"></i>Portal
                    </a>
                    <a class="btn btn-outline-light w-100" href="/Scheduler/Admin">
                        <i class="bi bi-gear me-2"></i>Admin
                    </a>
                </div>
                <div class="mt-3 pt-3" style="border-top: 1px solid rgba(255,255,255,.08);">
                    <small class="sc-muted">
                        <i class="bi bi-check-circle me-1"></i>Slot Management
                        <br>
                        <i class="bi bi-check-circle me-1"></i>Online Bookings
                        <br>
                        <i class="bi bi-check-circle me-1"></i>Conflict Prevention
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row reveal">
    <div class="col-12">
        <div class="card text-center">
            <div class="card-body py-5">
                <h3 class="mb-3">Ready to streamline your communication?</h3>
                <p class="sc-muted mb-4 lead">Get started with any of our powerful tools and make classroom management effortless.</p>
                <div class="d-flex gap-3 justify-content-center flex-wrap">
                    <a href="/Messages/Templates" class="btn btn-primary btn-lg">
                        <i class="bi bi-megaphone me-2"></i>Quick Message
                    </a>
                    <a href="/Absence" class="btn btn-primary btn-lg">
                        <i class="bi bi-journal-text me-2"></i>Absence Log
                    </a>
                    <a href="/Scheduler" class="btn btn-primary btn-lg">
                        <i class="bi bi-calendar-check me-2"></i>Scheduler
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


