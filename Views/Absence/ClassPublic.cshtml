@model IReadOnlyList<SchoolCommApp.Models.AbsenceLog>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	var cls = ViewBag.Class as SchoolCommApp.Models.ClassRoom;
	ViewData["Title"] = $"Updates - {cls?.Name}";
}
<h2>@cls?.Name â€“ Class Updates</h2>
<table class="table table-striped table-hover align-middle">
	<thead><tr><th>Date</th><th>Covered</th><th>Handouts</th><th>Homework</th></tr></thead>
	<tbody>
	@foreach (var a in Model)
	{
		<tr>
			<td>@a.Date</td>
			<td>@a.WhatWeCovered</td>
			<td>@a.Handouts</td>
			<td>@a.Homework</td>
		</tr>
	}
	</tbody>
</table>


