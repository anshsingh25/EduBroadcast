@model IReadOnlyList<EduBroadcast.Models.AbsenceLog>
@{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["Title"] = "While You Were Out";
        var classes = ViewBag.Classes as IReadOnlyList<EduBroadcast.Models.ClassRoom>;
}

<div class="row mb-4">
        <div class="col-12">
                <h2 class="mb-3 reveal">
                        <i class="bi bi-journal-text me-3" style="color: #06b6d4;"></i>
                        While You Were Out
                </h2>
                <p class="sc-muted reveal">Keep absent students in the loop by logging what was covered in class.</p>
        </div>
</div>

<div class="row g-4">
        <div class="col-lg-7">
                <h4 class="reveal mb-3">
                        <i class="bi bi-clock-history me-2"></i>
                        Recent Entries
                </h4>
                @await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")
                @if (Model == null || Model.Count == 0)
                {
                        <div class="empty-state reveal">
                                <div class="icon"><i class="bi bi-journal-text"></i></div>
                                <p class="mb-1 fs-5 fw-bold">No entries yet</p>
                                <p class="sc-muted mb-0">Add what you covered today to help absent students catch up.</p>
                        </div>
                }
                else
                {
                        <div class="row g-3">
                        @foreach (var a in Model)
                        {
                                var cls = classes!.FirstOrDefault(c => c.Id == a.ClassId);
                                <div class="col-12 reveal">
                                        <div class="card">
                                                <div class="card-body">
                                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                                                <div>
                                                                        <h6 class="mb-1">
                                                                                <i class="bi bi-calendar-event me-2" style="color: #06b6d4;"></i>
                                                                                @a.Date.ToString("MMM dd, yyyy")
                                                                        </h6>
                                                                        <a href="/Absence/Class/@a.ClassId" class="text-decoration-none">
                                                                                <small class="sc-muted">
                                                                                        <i class="bi bi-mortarboard me-1"></i>@cls?.Name
                                                                                </small>
                                                                        </a>
                                                                </div>
                                                        </div>
                                                        <p class="card-text mb-0"><strong>Covered:</strong> @a.WhatWeCovered</p>
                                                        @if (!string.IsNullOrWhiteSpace(a.Handouts))
                                                        {
                                                                <p class="card-text mb-0 mt-1"><small class="sc-muted"><strong>Handouts:</strong> @a.Handouts</small></p>
                                                        }
                                                        @if (!string.IsNullOrWhiteSpace(a.Homework))
                                                        {
                                                                <p class="card-text mb-0 mt-1"><small class="sc-muted"><strong>Homework:</strong> @a.Homework</small></p>
                                                        }
                                                </div>
                                        </div>
                                </div>
                        }
                        </div>
                }
        </div>
        
        <div class="col-lg-5">
                <div class="position-sticky" style="top: 20px;">
                        <div class="card reveal">
                                <div class="card-body">
                                        <h4 class="card-title mb-4">
                                                <i class="bi bi-plus-circle me-2" style="color: #10b981;"></i>
                                                Add New Entry
                                        </h4>
                                        <form method="post" asp-action="Create">
                                                <div class="mb-3">
                                                        <label class="form-label">Class</label>
                                                        <select class="form-select" name="classId" required>
                                                                <option value="">Choose a class...</option>
                                                                @foreach (var c in classes)
                                                                {
                                                                        <option value="@c.Id">@c.Name</option>
                                                                }
                                                        </select>
                                                </div>
                                                <div class="mb-3">
                                                        <label class="form-label">Date</label>
                                                        <input type="date" class="form-control" name="date" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" required />
                                                </div>
                                                <div class="mb-3">
                                                        <label class="form-label">What We Covered</label>
                                                        <textarea class="form-control" name="covered" rows="3" placeholder="Describe what was taught in class..." required></textarea>
                                                </div>
                                                <div class="mb-3">
                                                        <label class="form-label">Handouts</label>
                                                        <input class="form-control" name="handouts" placeholder="List any handouts or materials..." />
                                                </div>
                                                <div class="mb-4">
                                                        <label class="form-label">Homework</label>
                                                        <input class="form-control" name="homework" placeholder="Describe homework assignments..." />
                                                </div>
                                                <button class="btn btn-success w-100">
                                                        <i class="bi bi-save me-2"></i>Save Entry
                                                </button>
                                        </form>
                                </div>
                        </div>
                </div>
        </div>
</div>


