@{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewData["Title"] = "Quick Message - Broadcast";
        var classes = ViewBag.Classes as IReadOnlyList<EduBroadcast.Models.ClassRoom>;
        var templates = ViewBag.Templates as IReadOnlyList<EduBroadcast.Models.MessageTemplate>;
}
<h2 class="reveal">Broadcast Message</h2>
@await Html.PartialAsync("~/Views/Shared/_Alerts.cshtml")
@if ((templates == null || templates.Count == 0) || (classes == null || classes.Count == 0))
{
        <div class="empty-state reveal">
                <div class="icon"><i class="bi bi-megaphone"></i></div>
                <p class="mb-1">You need at least one template and one class.</p>
                <p class="sc-muted mb-0">Create a message template and ensure demo classes are seeded.</p>
        </div>
}
else
{
        <form method="post" asp-action="Broadcast" class="card card-body reveal">
                <div class="row g-3">
                        <div class="col-md-6">
                                <label class="form-label">Template</label>
                                <select class="form-select" name="TemplateId" required>
                                        <option value="">Choose...</option>
                                        @foreach (var t in templates)
                                        {
                                                <option value="@t.Id">@t.Title</option>
                                        }
                                </select>
                        </div>
                        <div class="col-md-6">
                                <label class="form-label">Class (optional)</label>
                                <select class="form-select" name="ClassId">
                                        <option value="">All/None</option>
                                        @foreach (var c in classes)
                                        {
                                                <option value="@c.Id">@c.Name</option>
                                        }
                                </select>
                        </div>
                </div>
                <div class="mt-3">
                        <label class="form-label">Or select individual students</label>
                        <div class="row row-cols-1 row-cols-md-2">
                                @foreach (var c in classes)
                                {
                                        <div class="col mb-2">
                                                <div class="card">
                                                        <div class="card-header">@c.Name</div>
                                                        <ul class="list-group list-group-flush">
                                                                @foreach (var s in c.Students)
                                                                {
                                                                        <li class="list-group-item">
                                                                                <label class="form-check-label">
                                                                                        <input class="form-check-input me-2" type="checkbox" name="StudentIds" value="@s.Id" />
                                                                                        @s.FullName
                                                                                </label>
                                                                        </li>
                                                                }
                                                        </ul>
                                                </div>
                                        </div>
                                }
                        </div>
                </div>
                <div class="mt-3">
                        <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="SendSms" value="true" id="sms">
                                <label for="sms" class="form-check-label">Send SMS</label>
                        </div>
                        <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" name="SendEmail" value="true" id="email">
                                <label for="email" class="form-check-label">Send Email</label>
                        </div>
                </div>
                <div class="mt-3">
                        <button class="btn btn-primary">Send</button>
                        <a href="/Messages/Templates" class="btn btn-link">Back to Templates</a>
                </div>
        </form>
}


