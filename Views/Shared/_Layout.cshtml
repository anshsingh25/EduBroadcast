@{
        Layout = null;
        var title = ViewData["Title"] as string ?? "EduBroadcast";
}
<!DOCTYPE html>
<html lang="en">
<head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@title</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
        <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
        <nav class="navbar navbar-expand-lg navbar-dark mb-4">
                <div class="container">
                        <a class="navbar-brand" href="/">EduBroadcast</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                                <span class="navbar-toggler-icon"></span>
                        </button>
                        <div id="nav" class="collapse navbar-collapse">
                                <ul class="navbar-nav me-auto">
                                        <li class="nav-item"><a class="nav-link" href="/Messages/Templates">Quick Message</a></li>
                                        <li class="nav-item"><a class="nav-link" href="/Absence">While You Were Out</a></li>
                                        <li class="nav-item"><a class="nav-link" href="/Scheduler">Conference Scheduler</a></li>
                                </ul>
                        </div>
                </div>
        </nav>
        <main class="container">
                @RenderBody()
        </main>
        <footer>
                <div class="container d-flex justify-content-between align-items-center">
                        <div class="sc-muted">Â© @DateTime.Now.Year EduBroadcast</div>
                        <div class="sc-muted">Built with ASP.NET Core</div>
                </div>
        </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
// reveal-on-scroll (no dependency)
(function(){
        const els = document.querySelectorAll('.reveal');
        const show = el=> el.classList.add('visible');
        if('IntersectionObserver' in window){
                const io = new IntersectionObserver((entries)=>{ entries.forEach(e=>{ if(e.isIntersecting) show(e.target); }); }, {threshold:.12});
                els.forEach(el=> io.observe(el));
        }else{ els.forEach(show); }
})();
</script>
</body>
</html>


